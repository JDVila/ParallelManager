<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/activity_start_fragment_height"
              android:gravity="center"
              android:background="@color/f9"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="70dp"
            android:src="@drawable/lines"
            android:tint="#80f9f9f9"
            android:visibility="invisible"
            />
    </FrameLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:hint="Enter an email address"
            android:gravity="center_vertical"
            android:inputType="textWebEmailAddress"
            android:theme="@style/TextLabel"
            android:typeface="sans"
            android:textColor="@color/textAlt"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_createaccount_edittext_username"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:hint="Enter a username"
            android:gravity="center_vertical"
            android:inputType="textWebEmailAddress"
            android:theme="@style/TextLabel"
            android:typeface="sans"
            android:textColor="@color/textAlt"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_createaccount_edittext_password"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:hint="Enter a password"
            android:inputType="textVisiblePassword"
            android:gravity="center_vertical"
            android:theme="@style/TextLabel"
            android:typeface="sans"
            android:textColor="@color/textAlt"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="@dimen/activity_start_edittext_height"
        android:text="Create"
        android:onClick="onClickToLogin"
        android:textColor="@color/gray10"
        android:background="@color/magentaDark"
        android:typeface="sans"
        android:layout_marginTop="10dp"
        />


</LinearLayout>