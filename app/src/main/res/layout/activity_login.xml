<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/activity_login_logoleft"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/lineleft"
            android:tint="@color/purpleMedium"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/activity_login_logoright"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:src="@drawable/lineright"
            android:tint="@color/purpleDark"
            android:layout_gravity="center"
            android:layout_marginBottom="140dp"
            android:visibility="invisible"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/activity_login_fragment_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

    </LinearLayout>

</FrameLayout>
