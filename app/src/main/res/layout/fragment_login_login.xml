<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/activity_start_fragment_height"
              android:gravity="center"
    >

    <FrameLayout
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        >

    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_login_edittext_username"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:hint="Email Address"
            android:gravity="center_vertical"
            android:inputType="textWebEmailAddress"
            android:textColor="@color/textMain"
            android:typeface="sans"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        android:layout_marginBottom="20dp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fragment_login_login_edittext_password"
            android:layout_width="@dimen/activity_start_edittext_width"
            android:layout_height="@dimen/activity_start_edittext_height"
            android:hint="Password"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textColor="@color/textMain"
            android:singleLine="true"
            />
    </android.support.design.widget.TextInputLayout>>

    <Button
        android:id="@+id/fragment_login_login_button_login"
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="@dimen/activity_start_edittext_height"
        android:text="Login"
        android:onClick="onClickToActivitySetup"
        android:textColor="@color/gray10"
        android:typeface="sans"
        android:background="@color/magentaDark"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="@dimen/activity_start_edittext_width"
        android:layout_height="24dp"
        android:text="Forgot your password?"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/textAlt"
        android:typeface="sans"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Don't have an account?"
            android:gravity="center"
            android:textColor="@color/textAlt"
            android:typeface="sans"
            />

        <TextView
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text=" Create one"
            android:onClick="onClicktoCreateAccount"
            android:gravity="center"
            android:textColor="@color/magentaDark"
            android:typeface="sans"
            />

    </LinearLayout>



</LinearLayout>